   #include <bits/stdc++.h>
using namespace std;


int main() {
    unordered_map<int,int>m;
    int n;
    cin>>n;
    for(int i=0;i<n;i++)
    {
        int a,b;
        cin>>a>>b;
        m[b]+=a;
    }  
    int mn=INT_MAX,mn1,mx=INT_MIN,mn2;
    for(auto t:m)
    {
        if(mn>t.second)
        {
            mn=t.second;
            mn1=t.first;
        }
        if(mx<t.second)
        {
            mx=t.second;
            mn2=t.first;
        }
    }
    mn1=abs(mn1-mn2);
    cout<<mn1<<endl;
    return 0;
}
